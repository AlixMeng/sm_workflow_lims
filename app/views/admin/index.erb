<div class="admin-view">
<h3>Admin</h3>

<div class="panel panel-default">
  <div class="panel-heading">
    <div class="title"> <h3 class="panel-title">Workflows</h3></div>
    <div class="admin-task-actions">[<a data-toggle="modal" data-target="#add-workflow-modal">Create a new workflow</a>]</div>
    <div style="clear: both;"></div>
  </div>
  <table class="table table-striped table-hover">
    <thead>
      <th>Name</th><th class="text-center">Has comments?</th><th class="text-center">Is reportable?</th>
    </thead>
    <tbody>
      <% presenter.each_workflow do |name,has_comment, id, reportable| %>
        <tr><td><%= name %></td>
          <td class="text-center">
              <span class="glyphicon <%= has_comment ? 'glyphicon-ok green-glyph':'glyphicon-remove' %>" aria-hidden="true"></span>
          </td>
          <td class="text-center">
            <span class="glyphicon <%= reportable ? 'glyphicon-ok':'glyphicon-remove' %>" aria-hidden="true"></span>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>


<div class="modal fade" id="add-workflow-modal">
  <div class="modal-dialog">
    <div class="modal-content">
      <form method="post" action="/admin/workflows">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title">Create a new Workflow</h4>
        </div>
        <div class="modal-body">
            <div class="form-group">
              <label class="control-label" for="name">Name</label>
              <input type="textbox" name="name" id="name" value="" class="form-control"  placeholder="Enter a workflow name"/>
            </div>
            <div class="form-group">
              <label class="control-label" for="hasComment">Has comment?</label>
              <input type="checkbox" name="hasComment" id="hasComment" class="form-control" />
            </div>
            <div class="form-group">
              <label class="control-label" for="reportable">Reportable?</label>
              <input type="checkbox" name="reportable" id="reportable" class="form-control" />
            </div>

        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <button type="submit" class="btn btn-default">Create</button>
        </div>
      </div><!-- /.modal-content -->
    </form>
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

<div class="panel panel-default">
  <div class="panel-heading">
    <div class="title"> <h3 class="panel-title">Pipeline Destinations</h3></div>
    <div class="admin-task-actions">[<a data-toggle="modal" data-target="#add-pipeline-destination-modal">Create a new destination</a>]</div>
    <div style="clear: both;"></div>
  </div>
  <table class="table table-striped table-hover">
    <thead>
      <th>Name</th>
    </thead>
    <tbody>
      <% presenter.each_pipeline_destination do |name, id| %>
        <tr><td><%= name %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>


<div class="modal fade" id="add-pipeline-destination-modal">
  <div class="modal-dialog">
    <div class="modal-content">
      <form method="post" action="/admin/pipeline_destinations">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title">Create a new Pipeline Destination</h4>
        </div>
        <div class="modal-body">
            <div class="form-group">
              <label class="control-label" for="name">Name</label>
              <input type="textbox" name="name" id="name" value="" class="form-control"  placeholder="Enter a pipeline destination name"/>
            </div>

        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <button type="submit" class="btn btn-default">Create</button>
        </div>
      </div><!-- /.modal-content -->
    </form>
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->


<form class="form-inline" role="form" action="/admin" method="POST">
</form>


  </div>
  <div class="container" id="footer">
  </div>
</body>
</html>
