<div id="<%= presenter.template_name %>-template" class="tab-pane fade">
  <h3><%= presenter.name %> <small><strong>Create</strong></small></h3>

  <form class="form-horizontal" role="form">

    <input type="hidden" name="asset_type_id" value="<%= presenter.id %>" />
    <input type="hidden" name="type" value="<%= presenter.type %>" />

    <div class="form-group">
      <label for="identifier" class="col-sm-2 control-label"><%= presenter.type %> <%= presenter.identifier %></label>
      <div class="col-sm-10">
        <input type="text" class="form-control" data-psg-regexp="<%= presenter.validates_with %>" data-psg-tokenizer=" " name="identifier" placeholder="Enter a valid <%= presenter.type %> <%= presenter.identifier %>" autocomplete="off">
      </div>
    </div>

    <% presenter.sample_count? do %>
      <div class="form-group">
        <label for="sample_count" class="col-sm-2 control-label">Number of samples</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" data-psg-regexp="^\d+$" name="sample_count" placeholder="Enter number of samples" autocomplete="off">
        </div>
      </div>
    <% end %>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <button type="submit" class="btn btn-default">Append to batch</button>
      </div>
    </div>

  </form>
</div>
